{
  "expo": {
    "name": "Learn Japanese Pod App",
    "slug": "LearnJapanesePod",
    "privacy": "public",
    "sdkVersion": "36.0.0",
    "platforms": [
      "ios",
      "android"
    ],
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#3cd070"
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "the-coding-forge",
            "project": "learnjapanesepod",
            "authToken": ""
          }
        }
      ]
    },
    "userInterfaceStyle": "automatic",
    "version": "0.4.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f1f1f1"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "android": {
      "package": "com.thecodingforge.learnjapanesepod",
      "versionCode": 5,
      "icon": "./assets/icon.png"
    },
    "ios": {
      "bundleIdentifier": "com.thecodingforge.learnjapanesepod",
      "buildNumber": "5",
      "supportsTablet": false,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      }
    }
  }
}
